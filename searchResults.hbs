    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Example data: Replace this with your actual data source
            const results = [
                { img: 'image1.jpg' },
                { img: 'image2.jpg' },
                { img: 'image3.jpg' },
                { img: 'image4.jpg' },
                { img: 'image1.jpg' }, // Duplicate for demonstration
                { img: 'image2.jpg' }  // Duplicate for demonstration
            ];

            // Function to ensure each image appears exactly once
            function getUniqueImages(data) {
                const seen = new Set();
                const uniqueImages = [];
                data.forEach(item => {
                    if (!seen.has(item.img)) {
                        seen.add(item.img);
                        uniqueImages.push(item);
                    }
                });
                return uniqueImages;
            }

            // Get unique images
            const uniqueImages = getUniqueImages(results);

            // Populate the image container with unique images
            const imageContainer = document.getElementById('image-container');
            uniqueImages.forEach(image => {
                const imgElement = document.createElement('img');
                imgElement.src = image.img;
                imgElement.alt = 'Image';
                imageContainer.appendChild(imgElement);
            });
        });
